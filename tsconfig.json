{
    "compilerOptions": {
        "pretty": true,
        "lib": ["ES2019", "DOM"],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "sourceMap": true,
        "composite": true,
        "noEmitOnError": true,

        "strictNullChecks": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "strictPropertyInitialization": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "skipLibCheck": true,

        "alwaysStrict": false,
        "preserveConstEnums": true,
        "newLine": "crlf",

        "types": ["jest"]
    },
    "exclude": ["node_modules", "app", "dist"],
    "include": ["./src/**/*"],
}